<%- include('../partials/header') %>

<main>

  <!-- Text -->
  <section class="mt-0 mb-0 pt-0 pb-0 text-center container">
    <div class="row pt-5">
      <div class="col-lg-8 col-md-10 mx-auto">
        <h1 class="fw-bold display-4 mb-4">All Shows</h1>
        <p class="lead text-muted">Explore our exciting lineup of productions. Find a story that sparks your imagination.</p>
      </div>
    </div>
  </section>
  
  <!-- All shows gallery -->
  <div class="album py-5 bg-body-tertiary">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 shows-grid-row">

        <!-- Iterate through each object in shows.json -->
        <% shows.forEach(show => { %>
          <div class="col">
            <div class="card shadow-sm h-100 fade-in">

              <!-- Show poster -->
              <img  src="/images/shows/<%= show.poster %>" 
                    class="card-img-top img-fluid" 
                    alt="<%= show.title %> Poster" 
                    style="width: 100%; height: auto;">

              <!-- Show blurb -->
              <div class="card-body d-flex flex-column">
                <h5 class="card-title fw-semibold"><%= show.title %></h5>
                <p class="card-text text-muted" style="font-size: 0.9rem;"><%= show.blurb %></p>
                
                <!-- Show runtime -->
                <div class="d-flex justify-content-between align-items-center mt-auto">
                  <a href="/shows/<%= show.slug %>" class="btn btn-outline-primary btn-sm">View Show</a>
                  <small class="text-muted"><%= show.runtime %></small>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
