<!-- Add header to page -->
<%- include('../partials/header') %>


<main>
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-10">

        <!-- Post title -->
        <h1 class="mb-4 text-center"><%= section.title %></h1>

        <!-- Post image, size constrained, left aligned -->
        <div class="mb-4 text-center">
          <img src="/images/<%= section.image %>" 
                alt="<%= section.title %>" 
                class="img-fluid rounded shadow"
                style="max-width: 600px; width: 100%;">
        </div>
    
        <!-- Post content -->
        <div class="mt-4 text-center">
          <% section.content.forEach(function(paragraph) { %>
            <p><%= paragraph %></p>
          <% }) %>
        </div>

        <!-- Link to About page -->
        <a href="/about" class="btn btn-outline-secondary mt-4">‚Üê Back to About</a>
      </div>
    </div>
  </div>
</main>


<!-- Add footer to page -->
<%- include('../partials/footer') %>
